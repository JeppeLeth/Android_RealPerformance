<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle" >
            <corners
                android:radius="@dimen/button_corner_radius"
                />
            <solid
                android:color="@color/realm_deactivated"
                />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/realm_button_border"
                />
            <padding
                android:left="@dimen/button_corner_radius"
                android:top="0dp"
                android:right="@dimen/button_corner_radius"
                android:bottom="0dp"
                />
        </shape>
    </item>
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="@dimen/button_corner_radius"
                />
            <solid
                android:color="@color/realm_accent_hover"
                />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/realm_button_border"
                />
            <padding
                android:left="@dimen/button_corner_radius"
                android:top="0dp"
                android:right="@dimen/button_corner_radius"
                android:bottom="0dp"
                />
        </shape>
    </item>
    <!-- focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="@dimen/button_corner_radius"
                />
            <solid
                android:color="@color/realm_accent_focus"
                />
            <stroke
                android:width="@dimen/button_stroke_width"
                android:color="@color/realm_button_border"
                />
            <padding
                android:left="@dimen/button_corner_radius"
                android:top="0dp"
                android:right="@dimen/button_corner_radius"
                android:bottom="0dp"
                />
        </shape>
    </item>
    <!-- default -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="@dimen/button_corner_radius"
                />
            <solid
                android:color="@color/realm_accent_focus"
                />
            <padding
                android:left="@dimen/button_corner_radius"
                android:top="0dp"
                android:right="@dimen/button_corner_radius"
                android:bottom="0dp"
                />
        </shape>
    </item>
</selector>
